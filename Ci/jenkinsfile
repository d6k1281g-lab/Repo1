pipeline {
    agent any

    environment {
        IMAGE_NAME = 'Dockerfile:latest'
        GITHUB_TOKEN = credentials('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')
    }

    stages {
        stage('Checkout') {
             steps {
                git url: 'https://github.com/d6k1281g-lab/Repo1.git',
                    credentialsId: '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'
            }
        }

        stage('Static Analysis') {
            steps {
                // Example: Python static analysis with pylint
                sh 'pip install pylint'
                sh 'pylint **/*.py || true'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${IMAGE_NAME} ."
            }
        }

        stage('Trivy Scan') {
            steps {
                sh '''
                    docker run --rm -v /var/run/docker.sock:/var/run/docker.sock \
                        aquasec/trivy:latest image --exit-code 0 --no-progress ${IMAGE_NAME}
                '''
            }
        }
    }
}